<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="become.sk.calculatoroftwovalues.MainActivity">

    <EditText
        android:id="@+id/number1"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="0.0"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="0.0"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="@+id/number1"
        app:layout_constraintTop_toBottomOf="@+id/number1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/number2"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/number2"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/number2"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/equalsSign"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:text="="
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/number2"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/number2" />

    <TextView
        android:id="@+id/solution"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="12dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/equalsSign"
        app:layout_constraintTop_toBottomOf="@+id/equalsSign" />

</android.support.constraint.ConstraintLayout>
